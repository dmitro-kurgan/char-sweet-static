block headscripts 
	script.
		function dodajAktywne(elem) {
		    var a = document.getElementsByClassName('chose_filling')
		    event.preventDefault();
		    for (i = 0; i < a.length; i++) {
		        a[i].classList.remove('active')
		    }
		    elem.classList.add('active');
		}
		
		function dodajAktywne2(elem) {
		    var a = document.getElementsByClassName('chose_type')
		    event.preventDefault();
		    for (i = 0; i < a.length; i++) {
		        a[i].classList.remove('active')
		    }
		    elem.classList.add('active');
		}
		function activeInput(elem) {
		    var a = document.getElementsByClassName('form-control')
		    event.preventDefault();
		    for (i = 0; i < a.length; i++) {
		        a[i].classList.remove('active')
		    }
		    elem.classList.add('active');
		}
